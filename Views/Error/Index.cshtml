@{
    ViewBag.Title = "Error - Something Went Wrong";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
        <div class="row justify-content-center w-100">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5 text-center">
                        <!-- Error Icon -->
                        <div class="mb-3">
                            <div class="display-1 text-warning mb-2">
                                <span style="font-size: 6rem;"><i class="fa fa-warning"></i></span>
                            </div>
                        </div>

                        <!-- Main Error Message -->
                        <h1 class="display-4 fw-bold text-dark mb-3">Oops!</h1>
                        <h2 class="h4 text-muted mb-4">Something went sideways</h2>

                        <!-- Humorous Description -->
                        <div class="mb-4">
                            <p class="lead text-secondary mb-2">
                                It looks like our digital hamsters took a coffee break at the wrong time.
                            </p>
                            <p class="text-muted">
                                Don't worry, we're already on it! Our tech wizards are working their magic to get things back on track.
                            </p>
                        </div>

                        <!-- Error Code (Optional) -->
                        <div class="alert alert-light border mb-3" role="alert">
                            <small class="text-muted">
                                <strong>Error Code:</strong> HAMSTER_OVERLOAD_500
                            </small>
                        </div>

                        
                    </div>
                </div>

                <!-- Fun Footer Message -->
                <div class="text-center mt-4">
                    <small class="text-muted">
                        <em>"The best error messages are the ones that make you smile while you wait for a fix."</em>
                    </small>
                </div>
            </div>
        </div>
    </div>
</body>
</html>