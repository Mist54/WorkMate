@{
    ViewBag.Title = "Page Not Found - 404";
    Layout = null;
}
<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
        <div class="row justify-content-center w-100">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5 text-center">
                        <!-- 404 Icon -->
                        <div class="mb-3">
                            <div class="display-1 text-primary mb-2">
                                <span style="font-size: 6rem;"><i class="fa fa-search"></i></span>
                            </div>
                        </div>

                        <!-- Main Error Message -->
                        <h1 class="display-4 fw-bold text-dark mb-3">404</h1>
                        <h2 class="h4 text-muted mb-4">Page Not Found</h2>

                        <!-- Humorous Description -->
                        <div class="mb-4">
                            <p class="lead text-secondary mb-2">
                                <i class="fa fa-compass text-warning me-2"></i>
                                Looks like you've wandered into uncharted digital territory!
                            </p>
                            <p class="text-muted">
                                The page you're looking for seems to have gone on an adventure without leaving a forwarding address.
                            </p>
                        </div>

                        <!-- Error Code -->
                        <div class="alert alert-light border mb-4" role="alert">
                            <small class="text-muted">
                                <i class="fa fa-code me-1"></i>
                                <strong>Error Code:</strong> PAGE_WENT_ON_VACATION_404
                            </small>
                        </div>

                        
                    </div>
                </div>

                <!-- Fun Footer Message -->
                <div class="text-center mt-4">
                    <div class="card bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <div class="card-body py-3">
                            <small>
                                <em>"Not all who wander are lost... but this page definitely is!"</em>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
