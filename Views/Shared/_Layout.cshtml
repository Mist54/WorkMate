<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Workmate your IT work partner</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/select2.css" rel="stylesheet" />
    <link href="~/Content/plugins/iziToast.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg bg-primary-subtle">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Work mate</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Tester X Dev
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>@Html.ActionLink("Manual Testcase Exporter", "TestExporter", "TestGenerator", null, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="row"><div class="col-12">&nbsp;</div></div>

    <div class="container-fluid body-content flex-grow-1">
        @RenderBody()
        <hr />
    </div>

    <footer class="text-center mt-auto py-3 bg-light">
        <p>&copy; @DateTime.Now.Year - WORKMATE</p>
    </footer>

    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/plugins/select2.js"></script>
    <script src="~/Scripts/plugins/iziToast.js"></script>

    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            // Initialize Select2 plugin
            $('.select2').select2({
                width: '100%',
                placeholder: 'Select an option',
                allowClear: true
            });
        });

        // Function to display iziToast notifications
        function showToast(type, message, title = '') {
            iziToast[type]({
                title: title,
                message: message,
                position: 'topRight',
                timeout: 5000,
                progressBar: true,
                transitionIn: 'fadeInLeft',
                transitionOut: 'fadeOutRight'
            });
        }

        // Check for TempData messages on page load and display them as toasts
        document.addEventListener('DOMContentLoaded', function () {
            // The Razor syntax @TempData["Key"] will be replaced by the server with the actual value,
            // or an empty string if TempData key doesn't exist.
            var toastMessage = '@TempData["ToastMessage"]';
            var toastType = '@TempData["ToastType"]';
            var toastTitle = '@TempData["ToastTitle"]';

            // Only show toast if a message and type are provided
            if (toastMessage && toastType) {
                showToast(toastType.toLowerCase(), toastMessage, toastTitle);
            }
        });
    </script>
</body>
</html>